# Database Connection
# Main connection URL with pooling parameters for serverless functions.
# Parameters:
#   connection_limit - Max connections per Prisma instance (default: 5)
#   pool_timeout - Wait time in seconds for a connection (default: 10)
DATABASE_URL="postgresql://user:password@localhost:5432/adsb?connection_limit=5&pool_timeout=10"

# Direct connection for migrations (bypasses connection pooler like PgBouncer).
# If using a connection pooler in production, set this to the direct DB connection.
# For local development without a pooler, this can be the same as DATABASE_URL.
DIRECT_DATABASE_URL="postgresql://user:password@localhost:5432/adsb"

# Worker connection URL (optional) - used by long-running background workers.
# Workers should use fewer connections since they run continuously.
# If not set, workers will use DATABASE_URL with its connection_limit.
# WORKER_DATABASE_URL="postgresql://user:password@localhost:5432/adsb?connection_limit=2&pool_timeout=10"

# Better Auth
# Generate secret: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-here-minimum-32-characters"
BETTER_AUTH_URL="http://localhost:3000"

# Public URL (for client-side auth)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# readsb JSON URL (tar1090 data endpoint)
READSB_JSON_URL="http://localhost:8080/data/aircraft.json"

# Mapbox (for live map)
NEXT_PUBLIC_MAPBOX_TOKEN="your-mapbox-token-here"

# Optional: For production Dokploy deployment
# BETTER_AUTH_URL="https://radar.hangartrak.com"
# NEXT_PUBLIC_APP_URL="https://radar.hangartrak.com"
# READSB_JSON_URL="http://hangartrak-radar:8080/data/aircraft.json"

# Sentry Error Tracking
# Get these from https://sentry.io/settings/
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# Upstash Redis (for production rate limiting)
# Get these from https://console.upstash.com/
# If not set, falls back to in-memory rate limiting (suitable for local dev)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
